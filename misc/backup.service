[Unit]
Description=Automatic backup, when backup drive connected

[Service]
ExecStartPre=/bin/bash -c "for _ in {1..5}; do if ! mountpoint /run/media/amnifilius/940761e2-7d84-4025-8972-89276e53bdc4 &> /dev/null; then sleep 1; fi; done"
ExecStart=/usr/bin/snap-sync --UUID 940761e2-7d84-4025-8972-89276e53bdc4 --subvolid 5 --config home --noconfirm
