source "$my_folder/scripts/keepassxc-mutt.sh Posteo |"
unalternates *
unmailboxes *

# set smtp and imap stuff
set imap_user = "$my_mail"
set from      = "$my_mail"
set imap_pass = "$my_pass"
set smtp_pass = "$my_pass"
set folder    = "imaps://$my_mail@posteo.de:993"
set smtp_url  = "smtps://$my_mail@posteo.de:465"

# specify some special mailboxes
set spoolfile = "+INBOX"
set postponed = "+Drafts"
set record    = "+Sent"
set trash     = "+Trash"

# recognize filter addresses
alternates '^'$my_user'\+.*@posteo\.net$'

# check this mailboxes for new messages periodically & display them in sidebar
mailboxes +INBOX +Junk +Drafts +Sent +Archive +Trash

# vi: ft=muttrc
