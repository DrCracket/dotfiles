unalternates *
unmailboxes *

# set smtp and imap stuff
set imap_user = "$my_studmail_user"
set from      = "$my_studmail_mail"
set imap_pass = "$my_studmail_pass"
set smtp_pass = "$my_studmail_pass"
set folder    = "imaps://imap.stud.tu-darmstadt.de:993"
set smtp_url  = "smtps://$my_studmail_user@smtp.tu-darmstadt.de:465"

# specify some special mailboxes
set spoolfile = "+INBOX"
set postponed = "+Drafts"
set record    = "+Sent"
set trash     = "+Trash"

# check this mailboxes for new messages periodically & display them in sidebar
mailboxes +INBOX +Junk +Drafts +Sent +Archives +Trash

