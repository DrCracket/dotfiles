# use lynx for automatic html viewing
text/html; lynx -assume_charset=%{charset} -display_charset=utf-8 -collapse_br_tags -dump %s; nametemplate=%s.html; copiousoutput

# use rangers rifle program for interactive viewing of everything else
audio/*; tmp=$(mktemp -d) && cp %s $tmp && setsid -f $SHELL -c "rifle -f F $tmp/$(basename %s) && rm -r $tmp" &> /dev/null
image/*; tmp=$(mktemp -d) && cp %s $tmp && setsid -f $SHELL -c "rifle -f F $tmp/$(basename %s) && rm -r $tmp" &> /dev/null
video/*; tmp=$(mktemp -d) && cp %s $tmp && setsid -f $SHELL -c "rifle -f F $tmp/$(basename %s) && rm -r $tmp" &> /dev/null
application/*; tmp=$(mktemp -d) && cp %s $tmp && setsid -f $SHELL -c "rifle -f F $tmp/$(basename %s) && rm -r $tmp" &> /dev/null
